<canvas id="canvas"></canvas>

<script>
  //@ts-nocheck
  // Get the canvas element and its context
  const canvas = document.getElementById("canvas");
  const ctx = canvas.getContext("2d");

  // Function to draw a radial gradient
  function drawGradient(x, y, innerRadius, outerRadius, colors) {
    // Create radial gradient
    const gradient = ctx.createRadialGradient(x, y, innerRadius, x, y, outerRadius);
    colors.forEach((color, index) => {
      gradient.addColorStop(index / (colors.length - 1), color);
    });

    // Draw gradient
    ctx.fillStyle = gradient;
    ctx.beginPath();
    ctx.arc(x, y, outerRadius, 0, Math.PI * 2);
    ctx.fill();
  }

  // Coordinates and radii for the gradients
  const gradients = [{ x: 100, y: 250, innerRadius: 2, outerRadius: 180, colors: ["#444", "#000"] }];

  // Draw all gradients
  gradients.forEach((gradient) => {
    drawGradient(gradient.x, gradient.y, gradient.innerRadius, gradient.outerRadius, gradient.colors);
  });
</script>

<style>
  canvas {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
</style>
