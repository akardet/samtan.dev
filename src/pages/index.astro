---
import Layout from "@layouts/Layout.astro";

const name = "Sam Tancharoensuksavai";

const links = [
  {
    label: "Bluesky",
    url: "https://bsky.app/profile/akasamtan.bsky.social",
  },
  {
    label: "LinkedIn",
    url: "https://www.linkedin.com/in/sam-tancharoensuksavai/",
  },
];
---

<Layout title={name}>
  <section class="container">
    <div class="content">
      <header>
        <h1 class="title">{name}</h1>
        <p class="subtext">Design Engineer</p>
      </header>
      <p class="summary">
        Human-centric developer with a passion for crafting thoughtful, story-driven web experiences.
      </p>
      <ul class="links">
        {
          links.map((link) => (
            <li>
              <a class="link" href={link.url}>
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>

<script>
  import { animate, stagger } from "motion";

  const summary = document.querySelector(".summary");

  if (summary) {
    const wrappedWords = summary.innerHTML
      .split(" ")
      .map((word) => `<span class="fade-in">${word}</span>`)
      .join(" ");

    summary.innerHTML = wrappedWords;

    animate(
      ".fade-in",
      {
        opacity: [0, 1],
        y: [15, 0],
        filter: ["blur(10px)", "blur(0px)"],
      },
      { delay: stagger(0.1), ease: "easeOut", duration: 0.65 }
    );

    animate(
      ".links > *",
      {
        opacity: [0, 1],
      },
      { delay: stagger(0.2, { startDelay: 1.25 }), ease: "easeOut", duration: 1 }
    );
  }
</script>

<style>
  .container {
    display: grid;
    place-items: center;
    max-width: var(--max-w);
    margin-inline: auto;
    height: 100vh;
  }

  .content {
    padding-inline: var(--space-s);
  }

  .title,
  .subtext {
    font-size: var(--step-0);
    font-weight: var(--font-semibold);
    line-height: 1.2;
  }

  .subtext {
    color: var(--color-text-2);
    margin-block-start: var(--space-3xs);
  }

  .summary {
    font-family: var(--font-secondary);
    font-size: var(--step-3);
    line-height: 1.4;
    margin-block-start: var(--space-l);
  }

  .links {
    margin-block-start: var(--space-s);
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-s);
    transform: translateX(calc(-1 * var(--space-xs)));
  }

  .link {
    text-decoration: none;
    font-family: var(--font-primary);
    color: var(--color-text-1);
    padding: var(--space-2xs) var(--space-xs);
    border-radius: 8px;
    transition: background-color 300ms cubic-bezier(0, 0.55, 0.45, 1);
  }

  .link:hover {
    background-color: var(--color-link-hover);
  }

  :global(.fade-in) {
    display: inline-block;
  }
</style>
