---
import Layout from "@layouts/Layout.astro";
import Image from "astro/components/Image.astro";

const name = "Sam Tancharoensuksavai";
---

<Layout title={name}>
  <section class="container">
    <section class="intro">
      <p>hello,</p>
      <p>
        iâ€™m a <span class="expand">design</span>
        <span class="intro-engineer"
          ><Image
            class="intro-engineer-gif"
            src={"/images/hacker-cat.gif"}
            height={300}
            width={300}
            alt="Hacker cat"
          />engineer</span
        >
        and creative problem <span class="solver">solver<span class="face">.</span></span>
      </p>
    </section>
  </section>

  <style>
    .container {
      position: relative;
      padding-inline: 1rem;
    }

    .intro-engineer {
      position: relative;
      display: inline-block;
    }

    .intro-engineer:hover > .intro-engineer-gif,
    .intro-engineer-gif.appear {
      --y: -53px;
      --rotation: 24deg;
      --scale: 1;
      opacity: 1;
    }

    .intro-engineer-gif {
      --y: -30px;
      --rotation: -20deg;
      --scale: 0.3;
      position: absolute;
      top: 0;
      left: 50%;
      height: 80px;
      width: auto;
      transform: scale(var(--scale)) rotate(var(--rotation)) translate3d(0%, var(--y), 0px);
      transition: 150ms ease-in-out;
      opacity: 0;
      border-radius: 8px;
    }

    h1 {
      font-weight: 200;
      font-size: var(--font-size);
      line-height: 1.2;
    }

    p {
      font-size: 4rem;
      text-wrap: balance;
      line-height: 1.2;
      font-variation-settings: "wght" 200;
    }

    .expand {
      transition: 200ms ease-out;
    }

    .expand:hover {
      font-variation-settings: "wght" 600;
    }

    .solver:hover > .face::after {
      --scale: 0.8;
    }
    .solver:hover > .face::before {
      --y: -20px;
    }

    .face {
      position: relative;
    }

    .face::before {
      --y: 0;
      content: ".";
      position: absolute;
      right: 0;
      transform: translateY(var(--y));
      transition: 75ms ease-out;
    }

    .face::after {
      --scale: 0;
      content: ")";
      position: absolute;
      top: 10.5px;
      right: -20px;
      transform-origin: 50% 50%;
      transform: scale(var(--scale));
      transition: 100ms ease-in-out;
    }
  </style>
</Layout>

<script>
  const hackerCatGif = document.querySelector(".intro-engineer-gif");

  hackerCatGif?.addEventListener("touchstart", () => {
    hackerCatGif.classList.add("appear");
  });

  hackerCatGif?.addEventListener("touchend", () => {
    hackerCatGif.classList.remove("appear");
  });
</script>
