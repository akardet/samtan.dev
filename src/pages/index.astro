---
import Layout from "../layouts/Layout.astro";
import Canvas from "../components/Canvas.astro";
---

<Layout title="Sam Tancharoensuksavai">
  <main>
    <Canvas />
    <p>อัครเดช</p>
    <h1>Sam Tancharoensuksavai</h1>
  </main>
</Layout>

<style>
  main {
    height: 100dvh;
    margin: auto;
    color: #e9e9e9;
    display: flex;
    place-items: center;
    place-content: center;
    flex-direction: column;
    width: 100%;
    text-align: center;
    overflow: hidden;
  }

  h1 {
    font-weight: 100;
    font-size: var(--font-size);
  }

  p {
    margin-top: 0;
    font-size: calc(var(--font-size) * 1.1);
    font-weight: 300;
  }
</style>
